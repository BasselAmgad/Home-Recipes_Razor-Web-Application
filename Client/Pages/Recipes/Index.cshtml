@page
@model Exercise3.Pages.Recipes.IndexModel
@{
    ViewData["Title"] = "Index";
}
<div></div>
<h1 class="text-center my-4" style="color:white">Recipes</h1>
<div class="row justify-content-center g-4">
    @foreach (var recipe in Model.Recipes)
    {
        <div class="col">
            <div class="card text-center">
                <div class="card-header">
                    <h5 class="card-header">@recipe.Title</h5>
                    <div class="card-header-pills">
                        <div class="text-center">
                            @foreach (var category in recipe.Categories)
                            {
                                <span style="font-size:12px; margin-top:5px; margin-right: 5px;" class="badge rounded-pill bg-primary">@category</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">

                    <div class="btn-group">
                        <a class="btn btn-primary" asp-page="Detail"
                       asp-route-id="@recipe.Id">
                            <i class="bi bi-zoom-in"></i>
                        </a>
                        <a class="btn btn-secondary" asp-page="Edit"
                       asp-route-id="@recipe.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a class="btn btn-danger" asp-page="Delete"
                       asp-route-id="@recipe.Id">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

